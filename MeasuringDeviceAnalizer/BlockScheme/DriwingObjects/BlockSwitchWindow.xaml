<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="BlockScheme.BlockSwitchWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Height="250"
	Width="350"
	Title="Ініціалізація перемикача"
	WindowStartupLocation="CenterOwner"
	ResizeMode="NoResize">
	<Grid>
		<Button
			x:Name="noBtn"
			Content="Ні"
			HorizontalAlignment="Left"
			Margin="250,177,0,0"
			VerticalAlignment="Top"
			Width="75"
			Click="noBtn_Click" />
		<Button
			x:Name="yesBtn"
			Content="Так"
			HorizontalAlignment="Left"
			Margin="160,177,0,0"
			VerticalAlignment="Top"
			Width="75"
			Click="yesBtn_Click" />
		<TextBox
			x:Name="LeftPortCount"
			HorizontalAlignment="Left"
			Height="23"
			Margin="10,55,0,0"
			VerticalAlignment="Top"
			Width="315"
			PreviewTextInput="PortCount_PreviewTextInput"
			PreviewKeyDown="PortCount_PreviewKeyDown" />
		<Label
			Content="Кількість портів зліва"
			HorizontalAlignment="Left"
			Margin="5,30,0,0"
			VerticalAlignment="Top"
			Height="26"
			Width="154" />
		<TextBox
			x:Name="RightPortCount"
			HorizontalAlignment="Left"
			Height="23"
			Margin="10,115,0,0"
			VerticalAlignment="Top"
			Width="315"
			PreviewTextInput="PortCount_PreviewTextInput"
			PreviewKeyDown="PortCount_PreviewKeyDown" />
		<Label
			Content="Кількість портів зправа"
			HorizontalAlignment="Left"
			Margin="5,90,0,0"
			VerticalAlignment="Top"
			Height="26"
			Width="154" />
	</Grid>
</Window>