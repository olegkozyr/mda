<Window x:Class="BlockScheme.BlockTwoWaysWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="250" Width="350" 
        Title="Ініціалізація двонаправленного блоку"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize">
    <Grid>
        <Button x:Name="noBtn" Content="Ні" HorizontalAlignment="Left" Margin="250,177,0,0" VerticalAlignment="Top" Width="75" Click="noBtn_Click"/>
        <Button x:Name="yesBtn" Content="Так" HorizontalAlignment="Left" Margin="160,177,0,0" VerticalAlignment="Top" Width="75" Click="yesBtn_Click"/>
        <TextBox x:Name="TransformRatio0" HorizontalAlignment="Left" Height="23" Margin="10,55,0,0" VerticalAlignment="Top" Width="315"/>
        <Label Content="Коефіцієнт перетворення 1" HorizontalAlignment="Left" Margin="5,30,0,0" VerticalAlignment="Top" Height="26" Width="154"/>
        <TextBox x:Name="TransformRatio1" HorizontalAlignment="Left" Height="23" Margin="10,115,0,0" VerticalAlignment="Top" Width="315"/>
        <Label Content="Коефіцієнт перетворення 2" HorizontalAlignment="Left" Margin="5,90,0,0" VerticalAlignment="Top" Height="26" Width="154"/>
    </Grid>
</Window>
