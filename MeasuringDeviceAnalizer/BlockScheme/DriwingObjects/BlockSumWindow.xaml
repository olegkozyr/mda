<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="BlockScheme.BlockSumWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Height="250"
	Width="350"
	Title="Ініціалізація суматора"
	WindowStartupLocation="CenterOwner"
	ResizeMode="NoResize">
	<Grid>
		<Button
			x:Name="noBtn"
			Content="Ні"
			HorizontalAlignment="Left"
			Margin="250,177,0,0"
			VerticalAlignment="Top"
			Width="75"
			Click="noBtn_Click" />
		<Button
			x:Name="yesBtn"
			Content="Так"
			HorizontalAlignment="Left"
			Margin="160,177,0,0"
			VerticalAlignment="Top"
			Width="75"
			Click="yesBtn_Click" />
		<TextBox
			x:Name="InPortCount"
			HorizontalAlignment="Left"
			Height="23"
			Margin="10,85,0,0"
			VerticalAlignment="Top"
			Width="315"
			PreviewTextInput="InPortCount_PreviewTextInput"
			PreviewKeyDown="InPortCount_PreviewKeyDown" />
		<Label
			Content="Кількість вхідних портів"
			HorizontalAlignment="Left"
			Margin="5,60,0,0"
			VerticalAlignment="Top"
			Height="26"
			Width="154" />
	</Grid>
</Window>