<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="BlockScheme.ConnectionSignalWindow" 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Height="250"
	Width="350"
	Title="Ініціалізація з'єднання"
	WindowStartupLocation="CenterOwner"
	ResizeMode="NoResize">
	<Grid>
		<TextBlock
			Text="Сигнал"
			HorizontalAlignment="Left"
			Margin="10,60,0,0"
			VerticalAlignment="Top"
			Height="26"
			Width="154" />		
		<TextBox
			x:Name="Signal"
			HorizontalAlignment="Left"
			Height="23"
			Margin="10,80,0,0"
			VerticalAlignment="Top"
			Width="315"
			PreviewTextInput="Signal_PreviewTextInput"
			PreviewKeyDown="Signal_PreviewKeyDown" LostFocus="Signal_LostFocus"/>
		<CheckBox x:Name="IsSignalInput" 			
		          HorizontalAlignment="Left"
		          Margin="10,120,0,0"
		          VerticalAlignment="Top"/>
		<TextBlock
			Text="Вхідний"
			HorizontalAlignment="Left"
			Margin="30,120,0,0"
			VerticalAlignment="Top"
			Height="26"
			Width="154" />			
		<Button
			x:Name="yesBtn"
			Content="Так"
			HorizontalAlignment="Left"
			Margin="160,177,0,0"
			VerticalAlignment="Top"
			Width="75"
			Click="yesBtn_Click" />
		<Button
			x:Name="noBtn"
			Content="Ні"
			HorizontalAlignment="Left"
			Margin="250,177,0,0"
			VerticalAlignment="Top"
			Width="75"
			Click="noBtn_Click" />
	</Grid>
</Window>